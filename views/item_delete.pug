extends layout

block content
  h1 #{title}: #{item.name}
  
  p Do you really want to delete this Item?
    
  form(method='POST' action='')
    div.form-group
      input#itemid.form-control(type='hidden',name='itemid', required='true', value=item._id )
      input#imageName.form-control(type='hidden',name='imageName', required='true', value=item.image )
      

    button.btn.btn-primary(type='submit') Delete
